<% content_for :subnav do %>
  <%= render 'namespaces/subnav', namespace: @group %>
<% end %>

<div class="box box-solid box-default">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t '.new_member' %></h3>
    <div class="box-tools pull-right">
    </div>
  </div>
  <%= form_tag namespace_members_path(@group.name) do %>
    <div class="box-body">
      <div class="form-group">
        <%= label_tag :username, t('.username') %>
        <%= text_field_tag :username, nil, class: 'form-control' %>
      </div>
    </div>

    <div class="box-footer">
      <%= submit_tag t('.invite_member'), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
