<div class="box box-solid box-default">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t '.system_settings' %></h3>
    <div class="box-tools pull-right">
    </div>
  </div>
  <%= form_tag admin_setting_path, method: :put do %>
    <div class="box-body">
      <div class="form-group">
        <%= label_tag :self_registration do %>
          <%= check_box_tag :self_registration, 1, Setting.self_registration %>
          <%= t '.self_registration' %>
        <% end %>
      </div>
      <div class="form-group">
        <%= label_tag :allow_push do %>
          <%= check_box_tag :allow_push, 1, Setting.allow_push %>
          <%= t '.allow_push' %>
        <% end %>
      </div>
    </div>
    <div class="box-footer">
      <%= submit_tag t('.save'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
